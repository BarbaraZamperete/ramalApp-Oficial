<div id="abrirModal" class="modal">
    <div id="modal-content"></div>
</div>

<script>
    const modal = document.getElementById("abrirModal")
    function modalAbrir(id) {
        const modalContent = document.getElementById("modal-content")
        modal.classList.add("modalAberto")
        modalContent.innerHTML = `
            <h3>Deseja realmente deletar este Setor?</h3>
            <div>
                <button id="deletar"><a href="/deletar/setor-${id}">Deletar</a></button>
                <button onclick="fechar()">Cancelar</button>
            </div>
            
        `
    }
    function fechar() {
        modal.classList.remove("modalAberto")
    }
</script>